            <!-- ################################################################################################ -->
            <div id="searchform">
                <div>
                    <form action="#" method="post">
                        <fieldset>
                            <legend>Quick Search:</legend>
                            <input type="text" placeholder="Arama Yapın">
                            <button type="submit"><i class="fas fa-search"></i></button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </section>
    </div>
    <div class="wrapper row3">
        <main class="hoc container clear">
            <!-- main body -->
            <div class="content">
                <!-- ################################################################################################ -->
                <div id="gallery">
                    <figure>
                        <header class="heading center">GALERİ</header>
                        <hr />
                        <br /><br />

                        @foreach (var item in Model.Contents)
                        {
                            <img src="@item.ContentImage" style="width:280px;height:130px;margin-bottom:10px;">
                        }
                       
                    </figure>
                </div>
                <nav class="pagination">
                    @Html.Action("AllHeading")
                </nav>
            </div>
        </main>
    </div>
