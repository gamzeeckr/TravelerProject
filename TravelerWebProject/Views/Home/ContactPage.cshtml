    <script src="/Templete1/foxclore/layout/scripts/jquery.min.js"></script>
    <script src="/Templete1/foxclore/layout/scripts/jquery.backtotop.js"></script>
    <script src="/Templete1/foxclore/layout/scripts/jquery.mobilemenu.js"></script>
    <script src="/Templete1/contact-form-02/js/jquery.min.js"></script>
    <script src="/Templete1/contact-form-02/js/popper.js"></script>
    <script src="/Templete1/contact-form-02/js/bootstrap.min.js"></script>
    <script src="/Templete1/contact-form-02/js/jquery.validate.min.js"></script>
    <script src="/Templete1/contact-form-02/js/main.js"></script>
</body>
</html>



