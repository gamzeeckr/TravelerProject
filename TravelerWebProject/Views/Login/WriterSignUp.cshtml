@model EntityLayer.Concrete.Writer
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags-->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Colorlib Templates">
    <meta name="author" content="Colorlib">
    <meta name="keywords" content="Colorlib Templates">

    <!-- Title Page-->
    <title>Kayıt Sayfası</title>

    <!-- Icons font CSS-->
    <link href="/Templete1/colorlib-regform-5/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="/Templete1/colorlib-regform-5/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i,800,800i" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="/Templete1/colorlib-regform-5/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="/Templete1/colorlib-regform-5/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="/Templete1/colorlib-regform-5/css/main.css" rel="stylesheet" media="all">
</head>

<body>
    <div class="page-wrapper bg-gra-03 p-t-45 p-b-50">
        <div class="wrapper wrapper--w790">
            <div class="card card-5">
                <div class="card-heading">
                    <h2 class="title">Kayıt Sayfası</h2>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("WriterSignUp", "Login", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        <div class="form-row m-b-55">
                            <div class="name">Ad Soyad</div>
                            <div class="value">
                                <div class="row row-space">
                                    <div class="col-2">
                                        <div class="input-group-desc">
                                            <input class="input--style-5" type="text" name="WriterName">
                                            <label class="label--desc">Ad</label>
                                        </div>
                                    </div>
                                    <div class="col-2">
                                        <div class="input-group-desc">
                                            <input class="input--style-5" type="text" name="WriterSurname">
                                            <label class="label--desc">Soyad</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Ünvan</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="text" name="WriterTitle">
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Hakkında</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="text" name="WriterAbout">
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Email</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="email" name="WriterMail">
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Şifre</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="password" name="WriterPassword">
                                </div>
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="name">Görsel</div>
                            <div class="value">
                                <div class="input-group">
                                    <input class="input--style-5" type="file" name="WriterImage">
                                </div>
                            </div>
                        </div>

                        <div>
                            <button class="btn btn--radius-2 btn--red" type="submit">Kayıt Ol</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Jquery JS-->
    <script src="/Templete1/colorlib-regform-5/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="/Templete1/colorlib-regform-5/vendor/select2/select2.min.js"></script>
    <script src="/Templete1/colorlib-regform-5/vendor/datepicker/moment.min.js"></script>
    <script src="/Templete1/colorlib-regform-5/vendor/datepicker/daterangepicker.js"></script>

    <!-- Main JS-->
    <script src="/Templete1/colorlib-regform-5/js/global.js"></script>

</body><!-- This templates was made by Colorlib (https://colorlib.com) -->

</html>






