@model EntityLayer.Concrete.Heading
@{
    ViewBag.Title = "NewHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h1>Yeni Başlık Ekleme Sayfası</h1>
<br />
@*üzerinde çalıştığım Action ismi,üzerinde çalıştığım controlller ismi,form method post olduğunda çalışsın*@
@using (Html.BeginForm("NewHeading", "WriterPanel", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName, "", new { @class = "text-danger" })
        <br />
        @Html.Label("Şehir")
        @Html.DropDownListFor(x => x.CityId, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
        <br />

        <button class="btn btn-info">Başlık Oluştur</button>
    </div>
}

